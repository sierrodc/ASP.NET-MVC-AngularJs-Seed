<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar sidebar-offcanvas" ng-controller="appAsideLte">
    <!-- sidebar: style can be found in sidebar.less -->
    @*slimscroll="{ color: 'rgba(0,0,0,0.2)', height: 'full', removeFromFullHeight: ['.header'], alwaysVisible: false }"*@
    <section class="sidebar" >
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/img/avatar3.png" class="img-circle" alt="User Image" />
            </div>
            <div class="pull-left info">
                <p>Hello, Jane</p>
                <a href=""><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search..." />
                <span class="input-group-btn">
                    <button type='submit' name='seach' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar.less -->
        <ul class="sidebar-menu" >
            <li class="treeview" ng-repeat="e in menuEntries" ng-class="{ active: isMenuActive(e.baseUrl || e.url) }">
                <a ng-href="{{e.url}}" ng-click="expandMenuItem(e, $event)">
                    <i class="fa" ng-class="e.icon"></i> <span>{{e.text}}</span>
                    <small ng-show="e.badge" class="badge pull-right" ng-class="e.badge.style">{{e.badge.text}}</small>
                    <i ng-show="e.menuEntries" class="fa pull-right" ng-class="{ 'fa-angle-left': !e.isExpanded && !isMenuActive(e.baseUrl || e.url), 'fa-angle-down': e.isExpanded || isMenuActive(e.baseUrl || e.url) }"></i>
                </a>
                <ul ng-show="e.isExpanded || isMenuActive(e.baseUrl || e.url)" style="display: block" class="treeview-menu">
                    <li ng-repeat="se in e.menuEntries" ng-class="{ active: isMenuActive(se.baseUrl || se.url) }">
                        <a ng-href="{{se.url}}"><i class="fa" ng-class="se.icon"></i> {{se.text}}</a>
                    </li>
                </ul>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
